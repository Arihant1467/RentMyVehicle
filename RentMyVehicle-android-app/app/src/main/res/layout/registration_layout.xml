<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/street"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/image_vehicle"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="200dp"/>

        <Button
            android:id="@+id/upload_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="Upload Picture"/>

        <EditText
            android:id="@+id/vehicle_segment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="Vehicle Segment"/>

        <EditText
            android:id="@+id/vehicle_model"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="Vehicle Model"/>

        <EditText
            android:id="@+id/vehicle_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="Vehicle Number"/>


        <EditText
            android:id="@+id/license_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="License Number"/>

        <EditText
            android:id="@+id/aadhar_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="Aadhar Number"/>

        <EditText
            android:id="@+id/owner_city"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="City"/>

        <EditText
            android:id="@+id/vehicle_cost"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="Price"/>


        <Button
            android:id="@+id/reg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="Register"/>
            </LinearLayout>

    </ScrollView>

</LinearLayout>